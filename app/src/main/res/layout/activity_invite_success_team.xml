<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_grey_black_14"
    tools:context=".team.InviteSuccessTeamActivity">

    <LinearLayout
        android:id="@+id/lin_nav"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:background="@color/secondary_grey_black_14"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="참여코드 인증"
            android:textColor="@color/secondary_grey_black_3"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="11sp"
        android:text="참여코드 인증에 성공했어요!"
        android:textColor="@color/secondary_grey_black_2"
        android:textSize="28dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_nav" />

    <ImageView
        android:id="@+id/iv_fire"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv_moing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16dp"
        android:text="소모임의 팀원들이 당신을 기다리고 있어요!"
        android:textColor="@color/secondary_grey_black_6"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/iv_fire"
        android:layout_marginTop="24dp"/>

    <android.widget.Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_moing"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="바로 모임 입장하기"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="18dp"
        android:textColor="@color/secondary_grey_black_12"
        android:background="@drawable/button_round_black1"/>

    <android.widget.Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_join"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="홈으로 돌아가기"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="18dp"
        android:textColor="@color/secondary_grey_black_4"
        android:background="@drawable/button_round_black14" />
</androidx.constraintlayout.widget.ConstraintLayout>