<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_invite_code_impossible_ll"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_round_black12"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/board_invite_code_impossible_tv_none1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="앗, 이 기능은 사용할 수 없어요!"
            android:textSize="20dp"
            android:textColor="@color/secondary_grey_black_3"
            android:fontFamily="@font/pretendard_semi_bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/board_invite_code_impossible_tv_none2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="해당 기능은\n소모임장만 사용할 수 있어요"
        android:textSize="16dp"
        android:textColor="@color/secondary_grey_black_6"
        android:textAlignment="center"
        android:fontFamily="@font/pretendard_medium"/>


    <ImageButton
        android:id="@+id/board_invite_code_impossible_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_board_invite_code_impossible" />

</LinearLayout>
