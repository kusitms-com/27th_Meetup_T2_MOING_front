<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_grey_black_14"
    tools:context=".team.InviteTeamActivity">

    <LinearLayout
        android:id="@+id/lin_nav"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:background="@color/secondary_grey_black_14"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="참여코드 인증"
            android:textColor="@color/secondary_grey_black_3"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="11sp"
        android:text="초대받은 모임의\n참여코드를 입력해주세요"
        android:textColor="@color/secondary_grey_black_2"
        android:textSize="28dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_nav" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="11sp"
        android:text="아직 받지 못하셨다면, 소모임장에게 요청해주세요"
        android:textColor="@color/secondary_grey_black_2"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/et_code"
        app:layout_constraintStart_toStartOf="parent"
        android:text="참여코드"
        android:textColor="@color/main_dark_200"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_round_corner_rectangle"
        android:gravity="center_vertical"
        android:hint="참여코드를 붙여넣어주세요"
        android:textColorHint="@color/secondary_grey_black_7"
        android:textSize="18dp"
        android:textColor="@color/secondary_grey_black_2"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16dp"
        android:text="참여코드를 다시 한번 확인해주세요"
        android:textColor="#F43A6F"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_code" />

    <android.widget.Button
        android:id="@+id/btn_realCheck"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="참여코드 인증하기"
        android:textColor="@color/secondary_grey_black_10"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/et_code"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        android:background="@drawable/button_round_black12"
        />


    <android.widget.Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center_vertical|center_horizontal"
        android:text="참여코드 인증하기"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/et_code"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_checkcode_invisible"
         />
</androidx.constraintlayout.widget.ConstraintLayout>