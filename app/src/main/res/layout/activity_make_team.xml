<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_grey_black_14"
    tools:context=".team.MakeTeamActivity">

    <LinearLayout
        android:id="@+id/lin_nav"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:background="@color/secondary_grey_black_14"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="새로운 모임 개설"
            android:textColor="@color/secondary_grey_black_3"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="11sp"
        android:text="어떤 활동을\n목표로 하는 소모임인가요?"
        android:textColor="@color/secondary_grey_black_2"
        android:textSize="28dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_nav" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:lineSpacingExtra="11sp"
        android:text="소모임의 카테고리를 선택해주세요"
        android:textColor="@color/secondary_grey_black_2"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <android.widget.Button
        android:id="@+id/btn_sports"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_select"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="스포츠/운동"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_sports"
        android:paddingLeft="48dp"
        android:drawablePadding="-56dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <android.widget.Button
        android:id="@+id/btn_life"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_select"
        android:drawableLeft="@drawable/ic_life"
        android:drawablePadding="-56dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:paddingLeft="48dp"
        android:text="생활습관 개선"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sports" />

    <android.widget.Button
        android:id="@+id/btn_test"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_select"
        android:drawableLeft="@drawable/ic_test"
        android:drawablePadding="-56dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:paddingLeft="48dp"
        android:text="시험/취업준비"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_life" />

    <android.widget.Button
        android:id="@+id/btn_study"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_select"
        android:drawableLeft="@drawable/ic_study"
        android:drawablePadding="-56dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:paddingLeft="48dp"
        android:text="스터디/공부"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_test" />

    <android.widget.Button
        android:id="@+id/btn_book"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_select"
        android:drawableLeft="@drawable/ic_book"
        android:drawablePadding="-56dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:paddingLeft="48dp"
        android:text="독서"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_study" />

    <android.widget.Button
        android:id="@+id/btn_proceed"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_select"
        android:drawableLeft="@drawable/ic_proceed"
        android:drawablePadding="-56dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:paddingLeft="48dp"
        android:text="그외 자기계발"
        android:textColor="@color/secondary_grey_black_7"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_book" />

    <ImageView
        android:id="@+id/iv_pg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_proceed"
        android:layout_marginTop="50dp"
        android:background="@drawable/maketeam_progress1" />

    <android.widget.Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_pg1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_round_black12"
        android:text="다음으로"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="18dp"
        android:textColor="@color/secondary_grey_black_10" />
</androidx.constraintlayout.widget.ConstraintLayout>