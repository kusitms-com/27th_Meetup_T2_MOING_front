<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="308dp"
    android:layout_height="256dp"
    android:background="@drawable/button_round_black12">

    <LinearLayout
        android:id="@+id/mission_status_undone_popup_ll_none1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/mission_status_undone_popup_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/x_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center"
            android:text="미션 인증"
            android:textColor="@color/secondary_grey_black_3"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mission_status_undone_popup_iv_none1"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/ic_throwing_fire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_status_undone_popup_ll_none1" />

    <TextView
        android:id="@+id/mission_status_undone_popup_tv_throw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="A님이 아직 미션을 완료하지 못했네요!\nA님의 발등에 불을 떨어트려볼까요?"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/secondary_grey_black_6"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_status_undone_popup_iv_none1"/>

    <ImageButton
        android:id="@+id/mission_status_undone_popup_btn_throw"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_throwing_fire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_status_undone_popup_tv_throw"/>



</androidx.constraintlayout.widget.ConstraintLayout>