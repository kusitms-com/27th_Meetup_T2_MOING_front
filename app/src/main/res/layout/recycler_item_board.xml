<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_grey_black_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="9dp"
            android:text="제목입니다."
            android:textColor="@color/secondary_grey_black_4"
            android:textSize="18dp"
            android:fontFamily="@font/pretendard_medium" />

        <TextView
            android:id="@+id/tv_board_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="9dp"
            android:text="내용입니다."
            android:textColor="@color/secondary_grey_black_7"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_medium"/>

        <View
            android:id="@+id/view_board_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"
            android:background="@color/secondary_grey_black_9"/>

    </LinearLayout>
</RelativeLayout>