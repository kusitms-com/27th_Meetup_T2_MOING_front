<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 에디트텍스트가 포커스를 받았을때의 모양 및 색상 -->
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/main_dark_200" />
            <corners android:radius="4dp"/>
            <solid
                android:color="@color/secondary_grey_black_13" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp"/>
        </shape>
    </item>

    <!-- EditText 가 포커스를 받지 않은 일반 상태일 때의 모양 및 색상 -->
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/secondary_grey_black_13" />
            <corners android:radius="5dp"/>
            <solid
                android:color="@color/secondary_grey_black_13" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp"/>
        </shape>
    </item>
</selector>