<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moing_Day" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 타이틀 바 없애기 -->
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <!-- 상태바 색깔 바꿈 -->
        <item name="colorPrimary">#111110</item>
        <item name="colorPrimaryVariant">#111110</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFBEB5</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- 목표보드 상단 테마 설정 -->
    <style name="board_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
    </style>

    <style name="Theme.Moing_Day.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Moing_Day.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Moing_Day.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>